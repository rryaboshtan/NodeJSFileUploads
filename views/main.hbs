<html lang='en'>
   <head>
      <meta charset='UTF-8' />
      <meta http-equiv='X-UA-Compatible' content='IE=edge' />
      <meta name='viewport' content='width=device-width, initial-scale=1.0' />
      <link
         href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css'
         rel='stylesheet'
         integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3'
         crossorigin='anonymous'
      />
      <link rel='stylesheet' href='css/style.css' />
      <title>Image Uploader</title>
   </head>
   <body>
      {{! File upload form }}
      <section class='section my-4'>
         <div class='container text-center'>
            <div class='title py-5'>
               <h1>Node File Uploader</h1>
               <p class='subtitle'>Upload images to the <b>Server</b></p>
            </div>
            <div class='row justify-content-center'>
               <div class='col-4'>
                  <form action='/uploadmultiple' enctype='multipart/form-data' method='POST'>
                     <div class='row'>
                        <div class='col-8'>
                           <input type='file' class='form-control' name='images' id='formFile' multiple />
                        </div>
                        <div class='col-2'>
                           <input type='submit' class='btn btn-warning' value='Upload images' />
                        </div>
                     </div>
                  </form>
               </div>

            </div>
         </div>
      </section>

      {{! display images }}
      <section class='mt-5'>
         <div class='row'>
            {{#each images}}
               {{#each this}}
                  {{#if imageBase64}}
                     <div class='col-3 images'>
                        <div class='card text-center' style='width: 18rem;'>
                           <h3>{{contentType}}</h3>
                           <img class='base64image' src='data:{{contentType}};base64,{{imageBase64}}' class='card-img-top img-fluid' alt='...' />
                           <div class='card-body'>
                              <h5 class='card-title font-poppins'>UI/UX Design</h5>
                              <p class='text-secondary font-size-09'>Some quick example text to build on the card title and make
                                 up the bulk of the card's content.                                    
                                                        
                                                        </p>
                              <a href='#' class='readmore btn btn-info font-size-09 text-light'>Read more...</a>
                           </div>
                        </div>
                     </div>
                  {{/if}}
               {{/each}}
            {{/each}}
         </div>
      </section>
   </body>
</html>